<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.metadatacenter" level="TRACE"/>
  <logger name="org.metadatacenter.server.neo4j.proxy.AbstractNeo4JProxy" level="DEBUG"/>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>